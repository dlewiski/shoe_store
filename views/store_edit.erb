<h1>Edit: <%= @store.store %></h1>

<form action="/store" method="post">
  <input name="_method" type="hidden" value="patch">
  <input name="store_update" type="hidden" value="<%= @store.id %>">
  <label for="store">Update Store Name:</label>
  <input type="text" name="store" id="store" autocomplete="off" required>  <button type="submit" class="btn btn-info">Update Store</button>
</form>
